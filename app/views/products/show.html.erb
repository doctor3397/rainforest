<%= link_to "Back to Products", products_url %>
<%= link_to "Edit", edit_product_path(@product) %>
<%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure you want to delete this picture?"}  %>s


<h2>Name: <%= @product.name %></h2>
<p>Description: <%= @product.description %></p>
<p>Price: <%= @product.formatted_price %></p>

<h3>Reviews</h3>
<p>Reviews for <%= @product.name %></p>
<% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    <% if review.user != nil %>
      <em> by <%= review.user.email %></em>
      Added on: <%= review.created_at %>
    <% end %>
  </p>
<% end %>
